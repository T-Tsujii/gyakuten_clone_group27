<div class="container">
  <div class="row">
    <% @movies.each.with_index(1) do |movie, i| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card border-dark mb-3">
          <div class="card-header p-0">
            <div class="embed-responsive embed-responsive-16by9">
              <iframe width="560" height="315" src="<%= movie.url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>     
            </div>
          </div>
          <div class="card-body text-dark movie-body">
            <p class="card-text"><%= movie.title %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @movies %>
</div>
