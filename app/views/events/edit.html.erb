
<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= form.label :start_time, "時刻" %>
      <%= form.date_select :start_time, {discard_year: true}, class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= form.time_field :start_time, class: "form-control" %>
      ~
      <%= form.time_field :end_time, class: "form-control" %>
    </div>

  <div class="form-group">
    <%= form.label :content, "内容" %>
    <%= form.text_area :content, class: "form-control", rows: 10 %>
  </div>

  <div>
    <%= form.submit "更新", class: "btn btn-warning btn-block" %>
    <%= link_to '戻る', events_path, class: "btn btn-primary btn-block" %>
  </div>

<% end %>