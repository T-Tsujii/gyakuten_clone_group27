<p id="notice"><%= notice %></p>

<h1>E~ベンツ</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', "#" %></td>
        <td><%= link_to 'Edit', "#" %></td>
        <td><%= link_to 'Destroy', "#", method: :delete, data: {confirm: '削除しても良いですか？'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '書く', new_event_path %>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event|%>
    <div>
      <%= link_to event.title, "#" %>
    </div>
  <% end %>

<% end %>