
<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= form.label :start_day, "時刻" %>
    <%= form.date_select :start_day, {discard_year: true}, class: "form-control",ignore_data:true%><br>
    </div> 

    <div class="form-group">
    <%= form.datetime_select :start_time, class: "form-control", ignore_data:true%>
    ~
    <%= form.datetime_select :end_time, class: "form-control", ignore_data:true %>
    </div>

  <div class="form-group">
    <%= form.label :content, "内容" %>
    <%= form.text_area :content, class: "form-control", rows: 10 %>
  </div>

  <div>
    <%= form.submit "送信", class: "btn btn-primary btn-block" %>
  </div>

<% end %>